{
  "name": "@federated-graphql-cicd/api-catalog",
  "version": "0.7.7",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@apollo/federation": "^0.19.1",
    "@federated-graphql-cicd/api-common": "^0.0.5",
    "apollo-server-express": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0"
  },
  "devDependencies": {
    "jest": "^26.2.2"
  },
  "scripts": {
    "debug": "node --inspect=0.0.0.0:9229 ./src/index.js",
    "dev": "nodemon --legacy-watch --watch ./src --watch ./data ./src/index.js",
    "dev:debug": "nodemon --legacy-watch --watch ./src --watch ./data --inspect=0.0.0.0:9229 ./src/index.js",
    "start": "node ./src/index.js --production",
    "format:check": "prettier --check \"**/*.{js,jsx,yml,yaml,json,css,scss,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,yml,yaml,json,css,scss,md}\"",
    "test": "NODE_ENV=test jest __tests__",
    "test:watch": "NODE_ENV=test jest __tests__ --watch",
    "test:watch:debug": "NODE_ENV=test jest __tests__ --watch --runInBand",
    "docker:build:dev": "docker build -t sincronize/federated-graphql-cicd-api-catalog:dev .",
    "docker:push:dev": "docker push sincronize/federated-graphql-cicd-api-catalog:dev",
    "docker:build": "docker build -t sincronize/federated-graphql-cicd-api-catalog:latest .",
    "docker:push": "docker push sincronize/federated-graphql-cicd-api-catalog:latest",
    "ci:docker:dev": "npm run docker:build:dev && npm run docker:push:dev",
    "ci:docker": "npm run docker:build && npm run docker:push",
    "ci:deploy:dev": "npm run ci:docker:dev",
    "ci:deploy": "npm run ci:docker"
  }
}
