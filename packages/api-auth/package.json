{
  "name": "@federated-graphql-cicd/api-auth",
  "version": "3.0.5",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@apollo/federation": "^0.19.1",
    "@federated-graphql-cicd/api-common": "^3.0.5",
    "apollo-server-express": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0"
  },
  "devDependencies": {
    "jest": "^26.2.2"
  },
  "scripts": {
    "debug": "node --inspect=0.0.0.0:9229 ./src/index.js",
    "dev": "nodemon --legacy-watch --watch ./src --watch ./data ./src/index.js",
    "dev:debug": "nodemon --legacy-watch --watch ./src --watch ./data --inspect=0.0.0.0:9229 ./src/index.js",
    "start": "node ./src/index.js --production",
    "format:check": "prettier --check \"**/*.{js,jsx,yml,yaml,json,css,scss,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,yml,yaml,json,css,scss,md}\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "docker:login": "echo \"$DOCKERHUB_PASSWORD\" | docker login --username \"$DOCKERHUB_USERNAME\" --password-stdin",
    "docker:build": "docker build -t sincronize/federated-graphql-cicid-api-auth:latest .",
    "docker:tag-version": "docker tag sincronize/federated-graphql-cicid-api-auth:latest sincronize/federated-graphql-cicid-api-auth:$LATEST_TAG",
    "docker:push": "docker push sincronize/federated-graphql-cicid-api-auth:latest",
    "ci:test": "cross-env NODE_ENV=test jest --ci --runInBand --detectOpenHandles --forceExit",
    "ci:docker": "npm run docker:login && npm run docker:build && docker:tag-version && npm run docker:push",
    "ci:deploy": "npm run ci:docker"
  }
}
