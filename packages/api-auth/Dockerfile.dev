FROM node:alpine

# Create app directory
WORKDIR /usr/src/app

## The wait.sh script
ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.2.1/wait /wait
RUN chmod +x /wait

# Install nodemon
RUN npm i nodemon -g --loglevel notice

# Remove logs
RUN rm -rf logs

# Port to expose
EXPOSE 4001

# Run app
CMD /wait && cd packages/api-auth && yarn dev:debug
